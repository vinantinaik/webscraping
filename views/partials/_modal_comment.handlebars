<!-- comment modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="articleTitle">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="comment-title" class="col-form-label">Title:</label>
                        <input type="text" class="form-control" id="comment-title">
                    </div>
                    <div class="form-group">
                        <label for="comment-body" class="col-form-label">Comment:</label>
                        <textarea class="form-control" id="comment-body"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="saveComment" type="button" class="btn btn-primary">Save Comment</button>
            </div>
        </div>
    </div>
</div>